# My first useful Makefile

CC = gcc

SRC = main.c school.c

OBJ = $(SRC:.c=.o)

NAME = school

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $^

%.o: %.c
	$(CC) -c $<

clean:
	rm -f #*# *~ $(NAME)

oclean:
	rm -f $(OBJ)

fclean:
	rm -f #*# *~ $(NAME) $(OBJ)

re: fclean all

.PHONY: clean oclean fclean re
